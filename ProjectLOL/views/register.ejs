<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro</title>
    <link href="/css/style.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="register.js"></script>
</head>
<body>
    <h1>Register</h1>

    <% if (error) { %>
    <div id="alert">
        <p><%= error %></p>
    </div>
    <% } %>
    <form action="/register" method="POST" class="form-group">
        <label for="username" class="form-label">Create Username:</label>
        <input type="text" name="username" class="form-control" required>
        
        <label for="password" class="form-label">Password:</label>
        <input type="password" name="password" class="form-control" required>
        
        <button type="submit" class="btn btn-success mt-2">Sign Up</button>
    </form>
    
    <script>
        const params = new URLSearchParams(window.location.search);
        const error = params.get('error');
        if (error) {
            alert(error);
        }
    </script>
    <p>Already have an account? <a href="/login">Inicia sesi√≥n</a></p>
</body>
</html>